{
  "window.title": "${separator}${rootName}${separator}${activeEditorMedium}",
  "window.zoomLevel": 0,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "extensions.ignoreRecommendations": true,
  "breadcrumbs.enabled": true,
  "workbench.colorTheme": "Material Theme Darker High Contrast",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.folders.color": "#90a4ae",
  "material-icon-theme.opacity": 0.8,
  "editor.fontSize": 12,
  "editor.tabSize": 2,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.wordWrap": "on",
  "editor.dragAndDrop": false,
  "editor.renderLineHighlight": "all",
  "editor.formatOnSave": true,
  "editor.formatOnSaveTimeout": 750,
  "editor.fontFamily": "FiraCode-Retina",
  "editor.fontLigatures": true,
  "editor.insertSpaces": true,
  "editor.cursorBlinking": "smooth",
  "editor.detectIndentation": true,
  "editor.renderWhitespace": "all",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.maxColumn": 110,
  "editor.minimap.side": "right",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/node_modules/": true,
    "**/.git": true,
    "**/node_modules": true,
    "**/yarn.lock": true
  },
  "gitlens.defaultDateShortFormat": "DD/MM/YY",
  "gitlens.defaultDateFormat": "DD,MMMM,YYYY",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "eslint.autoFixOnSave": true,
  "prettier.eslintIntegration": true,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "blade.format.enable": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss"
  ],
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/build/**",
    "**/.vscode/**",
    "**/.github/**",
    "**/_output/**",
    "**/*.min.*",
    "**/*.map",
    "**/.next/**"
  ],
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 10,
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,
  "tailwindCSS.emmetCompletions": true,
  "bracketPairColorizer.showVerticalScopeLine": true,
  "bracketPairColorizer.activeScopeCSS": [
    "borderColor : {color}; opacity: 0.5",
    "backgroundColor : {color}"
  ]
}
